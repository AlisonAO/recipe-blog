
<% if @post.errors.any? %>
  <h3><%= pluralize(@post.errors.count, "error") %> stopped your soufle from rising!</h3>

  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li> <%= msg %></li>
    <% end %>

  </ul>
  
<% end %>

<%= form_for(@post) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :theme %>
  <%= f.text_field :theme %>

  <%= f.label :image %>
  <%= f.text_field :image %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.submit %>


<% end %>

<br>

<%= link_to "Home", root_path if action_name == "index"%>
<%= link_to "Back", @post unless action_name == "index" %>